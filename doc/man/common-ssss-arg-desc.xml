	    <term>
		<group choice="plain">
		    <arg choice="plain"><option>-q</option></arg>
		</group>
	    </term>

	    <listitem><para>
		Quiet operation.
	    </para></listitem>
	</varlistentry>
	<varlistentry>
	    <term>
		<group choice="plain">
		    <arg choice="plain"><option>-V</option></arg>
